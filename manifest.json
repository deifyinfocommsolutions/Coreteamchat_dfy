{
    "name": "Core Team Chat",
    "id": "corechat",
    "packaging_format": 1,
    "description": {
        "en": "XMPP Web client for Core Team."
    },
    "version": "1.0",
    "url": "https://github.com/deifyinfocommsolutions/coreteamchat_dfy",
    "license": "free",
    "maintainer": {
		"name": "Deify Infocomm Solutions",
		"email": "support@deifysolutions.com"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for the xmpp web client",
                    "fr": "Choisissez un nom de domaine pour le client web xmpp"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for the xmpp web client",
                    "fr": "Choisissez un chemin pour le client web xmpp"
                },
                "example": "/example",
                "default": "/"
            }
        ]
    }
}
